<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/primary"
    android:layout_height="match_parent"
    tools:context=".ui.detail.HoroscopeDetailActivity">

    <ImageView
        android:id="@+id/ivDetail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="300dp"
        tools:src="@drawable/detail_capricorn"/>
    
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/gold"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="24dp"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/tvTittleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Tittle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDetail"
        tools:text="Capricornio"/>

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:theme="@style/Body"
        android:layout_margin="24dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTittleDetail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="qwefqwf qwefqwfwqefqwef   qwef weqf EF QW EF QWEF QW EF QWEF QWE FQW EF QW EFQWEF QWEFQNEW"/>
    
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/gold"
        app:layout_constraintTop_toBottomOf="@id/tvTittleDetail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>